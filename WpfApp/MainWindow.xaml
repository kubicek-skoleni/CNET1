<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Background="LightSkyBlue"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,0,-49">
        <Button x:Name="btnMain" Content="Počítadlo" 
                Margin="213,75,400,0" VerticalAlignment="Top" Height="49" Background="#FF8DEC7A" BorderBrush="#FFE22E2E" Click="btnMain_Click" FontSize="20" />
        <TextBlock x:Name="txbInfo" HorizontalAlignment="Left" Margin="375,146,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Height="42" Width="425" FontSize="24"/>
        <Button x:Name="btnBasicMover" Click="btnBasicMover_Click" Content="Basic Mover" HorizontalAlignment="Left" Margin="217,209,0,0" VerticalAlignment="Top" Height="55" Width="183" Background="#FFDCB6F3"/>
        <Button Click="btnMainWindowLauch_Click" x:Name="btnMainWindowLauch" Content="Main Window" HorizontalAlignment="Left" Margin="217,283,0,0" VerticalAlignment="Top" Width="183" Height="40" Background="#FFF3EFC3"/>
        <TextBlock HorizontalAlignment="Left" Margin="213,146,0,0" TextWrapping="Wrap" Text="Počet kliknutí:" VerticalAlignment="Top" FontSize="24" Foreground="#FFE84242"/>
        <Button x:Name="btnHumanizer" Content="Test Humanizer
                " HorizontalAlignment="Left" Margin="213,348,0,0" VerticalAlignment="Top" Width="187" Height="36" Click="btnHumanizer_Click" FontSize="20"/>
        <TextBlock x:Name="txbHumanizer" HorizontalAlignment="Left" Height="36" Margin="422,348,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="378" FontSize="24"/>
        <TextBox x:Name="txtJmeno" HorizontalAlignment="Left" Margin="556,0,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="120" FontSize="20"/>
        <Label Content="Jméno" HorizontalAlignment="Left" Margin="488,0,0,0" VerticalAlignment="Center" Width="100" FontSize="20"/>
        <ListBox HorizontalAlignment="Left" Height="93" Margin="505,250,0,0" VerticalAlignment="Top" Width="178" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <ComboBox HorizontalAlignment="Left" Margin="544,358,0,0" VerticalAlignment="Top" Width="161"/>
        <Button Click="btnStudenForm_Click" 
                x:Name="btnStudenForm" 
                Content="Student Form" 
                HorizontalAlignment="Left" 
                Margin="217,389,0,0" VerticalAlignment="Top" 
                Width="183" Height="40" Background="#FFF3EFC3"/>

    </Grid>
</Window>
