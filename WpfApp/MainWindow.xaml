<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Background="LightSkyBlue"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnMain" Content="Počítadlo" 
                Margin="213,75,400,0" VerticalAlignment="Top" Height="49" Background="#FF8DEC7A" BorderBrush="#FFE22E2E" Click="btnMain_Click" FontSize="20" />
        <TextBlock x:Name="txbInfo" HorizontalAlignment="Left" Margin="375,146,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Height="42" Width="425" FontSize="24"/>
