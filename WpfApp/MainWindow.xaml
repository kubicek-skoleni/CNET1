        <Button Click="btnMainWindowLauch_Click" x:Name="btnMainWindowLauch" Content="Main Window" HorizontalAlignment="Left" Margin="217,283,0,0" VerticalAlignment="Top" Width="183" Height="40" Background="#FFF3EFC3"/>
        <TextBlock HorizontalAlignment="Left" Margin="213,146,0,0" TextWrapping="Wrap" Text="Počet kliknutí:" VerticalAlignment="Top" FontSize="24" Foreground="#FFE84242"/>
        <Button x:Name="btnHumanizer" Content="Test Humanizer
                " HorizontalAlignment="Left" Margin="213,348,0,0" VerticalAlignment="Top" Width="187" Height="36" Click="btnHumanizer_Click" FontSize="20"/>
        <TextBlock x:Name="txbHumanizer" HorizontalAlignment="Left" Height="36" Margin="422,348,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="378" FontSize="24"/>

    </Grid>
</Window>
