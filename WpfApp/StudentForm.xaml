<Window x:Class="WpfApp.StudentForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="StudentForm" Height="450" Width="500">
    <Grid>
        <Label FontSize="20" Content="Jméno" HorizontalAlignment="Left" Margin="85,50,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtName" FontSize="20" HorizontalAlignment="Left" Margin="177,54,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="260"/>
        <Label FontSize="20" Content="Datum nar." HorizontalAlignment="Left" Margin="41,104,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="dateBirth" HorizontalAlignment="Left" Margin="177,110,0,0" VerticalAlignment="Top" Width="260" Height="31"/>
        <Label FontSize="20" Content="Pohlaví" HorizontalAlignment="Left" Margin="80,165,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmbGender" HorizontalAlignment="Left" Margin="177,172,0,0" VerticalAlignment="Top" 
                  Width="260" Height="30">
            <ComboBoxItem Content="Nevybráno"/>
            <ComboBoxItem Content="Muž"/>
            <ComboBoxItem Content="Žena"/>
            <ComboBoxItem Content="Jiné"/>
        </ComboBox>
        <Button x:Name="btnSave" Content="Ulož" HorizontalAlignment="Left" Margin="95,337,0,0" VerticalAlignment="Top" Width="342" Height="50" FontSize="24" Click="btnSave_Click"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="Nový student" VerticalAlignment="Top" Width="127" Height="30" FontSize="20"/>

    </Grid>
</Window>
